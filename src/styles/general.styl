body
	background #000c0a
	color #fff
	font-family Inter, Ubuntu, Arial, sans-serif
	overflow-x hidden

h1
	font-family "Space Grotesk", Inter, Ubuntu, Arial, sans-serif
	font-size 8rem

#MAIN
	margin 1rem 10rem 0px 10rem

p
	font-size 1.25rem

.titleBlock
	text-align center
	padding-top 6rem

	h1
		font-weight black
		line-height 0

p#tagline
	font-size 2rem
	line-height 0
	text-align center
	margin-bottom 8rem

.titleBlock::before
	position: absolute;
	z-index: -1;
	content: "";
	top: 0%;
	bottom: 10%;
	width: 150%;
	left: -25%;
	background: linear-gradient(83.21deg,#1a931e 0%,#1f61ad 100%);
	-webkit-mask-image: radial-gradient(rgba(0,0,0,.45),transparent 70%);
	mask-image: radial-gradient(rgba(0,0,0,.45),transparent 70%);