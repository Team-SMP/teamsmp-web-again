color-bg = #000c0a
color-cta = #26bf2b
color-cta-hover = #1e9e23

body
	background color-bg
	color #fff
	font-family Inter, Ubuntu, Arial, sans-serif
	overflow-x hidden

h1
	font-family "Space Grotesk", Inter, Ubuntu, Arial, sans-serif
	font-size 8rem

section
	margin-top 3rem

	h2
		font-family "Space Grotesk", Inter, Ubuntu, Arial, sans-serif
		font-size 2.5rem
		margin-left 1.5rem
		line-height 0

#MAIN
	margin 1rem 14rem 0px 14rem

p
	font-size 1.25rem

.titleBlock
	text-align center
	padding-top 6rem

	h1
		font-weight bolder
		line-height 0.9

p#tagline
	margin-top -4.5rem
	font-size 2rem
	line-height 1
	text-align center
	margin-bottom 8rem

.titleBlock::before
	position: absolute;
	z-index: -1;
	content: "";
	top: -10%;
	bottom: 10%;
	width: 150%;
	left: -25%;
	background: linear-gradient(83.21deg,#1a931e 0%,#1f61ad 100%);
	-webkit-mask-image: radial-gradient(rgba(0,0,0,.45),transparent 70%);
	mask-image: radial-gradient(rgba(0,0,0,.45),transparent 70%);

.button
	padding 0.7rem
	background color-cta
	text-decoration none
	color #fff !important
	border-radius 0.8rem
	transition background 150ms ease-out 80ms
	&:hover
		background color-cta-hover

a
	color color-cta
	transition color 150ms ease-out 80ms
	&:hover
		color color-cta-hover

// responsive design for smaller screens.
@media screen and (max-width: 768px)
	#MAIN
		margin 1rem 1.8rem 0px 1.8rem
	
	.titleBlock
		h1
			font-size 7rem